{{!< ucenter}}

{{#append "header"}}
    {{>settings/tab}}
{{/append}}

<div class="row">
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">完善公司信息</h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal form-signup" action="/api/companies/update/{{request.session.company._id}}" role="form" method="post" novalidate>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">公司名称</label>
                        <div class="col-sm-6">
                            <input name="name" type="text" class="form-control" required autofocus value="{{request.session.company.name}}" data-clear-btn='true'>
                        </div>
                    </div>
                    <div class="form-group hide">
                        <label class="col-sm-2 control-label">公司性质</label>
                        <div class="col-sm-6">
                            <input name="type" type="text" class="form-control" value="{{request.session.company.type}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">所属行业</label>
                        <div class="col-sm-6">
                            <select name="industry" class="form-control">
                            <option value="">-请选择-</option>
                            {{#each industries}}
                                {{#is @root.request.session.company.industry '===' this}}
                                    <option value="{{this}}" selected>{{this}}</option>
                                {{else}}
                                    <option value="{{this}}">{{this}}</option>
                                {{/is}}
                            {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">公司规模</label>
                        <div class="col-sm-6">
                            <select name="scale" class="form-control">
                            <option value="">-请选择-</option>
                            {{#each scales}}
                                {{#is @root.request.session.company.scale '===' this}}
                                    <option value="{{this}}" selected>{{this}}</option>
                                {{else}}
                                    <option value="{{this}}">{{this}}</option>
                                {{/is}}
                            {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">年收入</label>
                        <div class="col-sm-6">
                            <select name="income" class="form-control">
                            <option value="">-请选择-</option>
                            {{#each incomes}}
                                {{#is @root.request.session.company.income '===' this}}
                                    <option value="{{this}}" selected>{{this}}</option>
                                {{else}}
                                    <option value="{{this}}">{{this}}</option>
                                {{/is}}
                            {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group hide">
                        <label class="col-sm-2 control-label">联系方式</label>
                        <div class="col-sm-6">
                            <input name="contact" type="text" class="form-control" value="{{request.session.company.contact}}" data-clear-btn='true'>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">&nbsp;</label>
                        <div class="col-sm-2">
                            <button class="btn btn-primary btn-block" type="submit">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

