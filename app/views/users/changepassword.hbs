{{!< ucenter}}

{{#append "header"}}
<p class="page-title">修改密码</p>
{{/append}}

<div class="row">

    <div class="col-md-9">

        <form id="j-changepassword-form" class="form-horizontal" action="/users/changepassword" role="form" method="post" novalidate>
            <div class="form-group">
                <label class="col-sm-2 control-label">当前密码</label>
                <div class="col-sm-6">
                    <input name="currentPassword" type="password" class="form-control" placeholder="请输入当前密码" remote="/users/checkpassword" required data-msg-required="请输入当前密码" data-remote="旧密码不正确" autofocus data-clear-btn='true'>
                </div>
                <div class="col-sm-4"></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">新密码</label>
                <div class="col-sm-6">
                    <input id="j-new-password" name="newPassword" type="password" class="form-control" placeholder="请输入新密码" required data-msg-required="请输入新密码" minlength="6" data-clear-btn='true' >
                </div>
                <div class="col-sm-4"></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">确认密码</label>
                <div class="col-sm-6">
                    <input name="verifyPassword" type="password" class="form-control" placeholder="请确认新密码" required data-msg-required="请确认新密码" minlength="6" equalTo="#j-new-password" data-msg-equalto="确认密码不正确" data-clear-btn='true'>
                </div>
                <div class="col-sm-4"></div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">&nbsp;</label>
                <div class="col-sm-6">
                    <button class="btn btn-primary btn-block" type="submit">提交</button>
                </div>
            </div>

        </form>
    </div>
</div>
